{{!< default }}



{{! Blog navbar }}
<nav class="navbar fixed shaded">
  <div class="navbar--row container">
    <!-- Icon -->
    <!-- <div class="navbar--icon"></div> -->
    <!-- Title -->
    <a class="navbar--title" href="{{@blog.url}}">{{@blog.title}}</a>
    <!-- Spacer -->
    <div class="navbar--spacer"></div>
    <!-- Links -->
    {{navigation}}
  </div>
</nav>


{{! Blog header }}
<header class="header shaded bg-darken">
  <!-- Content -->
  <div class="header--content onMiddle container">
    <h1 class="header--title center">{{@blog.title}}</h1>
    <h5 class="header--subtitle center">{{@blog.description}}</h5>
  </div>
  <!-- Background -->
  {{#if @blog.cover_image}}
    <img class="bg-image" src="{{@blog.cover_image}}" />
  {{/if}}
</header>


{{! Blog content }}
<main class="content" role="main">
  <div class="main--content container">

  {{#foreach posts}}
    {{> "post-card"}}
  {{/foreach}}
  </div>
</main>


{{! Blog pagination }}
{{#if pagination}}{{pagination}}{{/if}}
